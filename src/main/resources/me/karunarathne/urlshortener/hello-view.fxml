<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="me.karunarathne.urlshortener.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="20.0" >
        <Label text="Adf.ly User ID" />
        <TextField fx:id="userId" />
    </HBox>

    <HBox alignment="CENTER" spacing="20.0" >
        <Label text="Adf.ly Public Key" />
        <TextField fx:id="puk" />
    </HBox>

    <HBox alignment="CENTER" spacing="20.0" >
        <Label text="Adf.ly Secret Key" />
        <TextField fx:id="sk" />
    </HBox>

    <Button text="Authenticate" onAction="#authenticate"/>

    <Label text="IDLE..." fx:id="statusLabel" />
</VBox>
