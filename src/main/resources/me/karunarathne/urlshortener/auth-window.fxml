<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="me.karunarathne.urlshortener.AuthWindowController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <Label fx:id="title" text="Authenticate to Adf.ly" />
    </top>

    <center>
        <VBox >
            <GridPane alignment="CENTER" >
                <Label text="Adf.ly User ID" alignment="CENTER_RIGHT" padding="20.0"
                       GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="userId" alignment="CENTER_LEFT"
                           GridPane.rowIndex="0"  GridPane.columnIndex="1" />

                <Label text="Adf.ly Public Key" alignment="CENTER_RIGHT"
                       GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="puk" alignment="CENTER_LEFT"
                           GridPane.rowIndex="1"  GridPane.columnIndex="1" />

                <Label text="Adf.ly Secret Key" alignment="CENTER_RIGHT"
                       GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="sk" alignment="CENTER_LEFT"
                           GridPane.rowIndex="2"  GridPane.columnIndex="1" />
            </GridPane>

            <Button text="Authenticate" onAction="#authenticate"/>
        </VBox>
    </center>

    <bottom>
        <Label text="IDLE..." fx:id="statusLabel" />
    </bottom>

</BorderPane>
